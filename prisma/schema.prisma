// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//get the lastly recorded mastery from masteryTracking
model Deck {
  deck_id    Int      @id @default(autoincrement())
  title      String
  created_at DateTime @default(now())
  last_review_date DateTime?
  next_review_date DateTime?
  cards      Card[]
  masteryTracking MasteryTracking[]
  schedule Schedule?
}

model Card {
  card_id          Int      @id @default(autoincrement())
  front_content    String
  back_content     String
  created_at       DateTime @default(now())
  last_review_date DateTime?
  count            Int
mastery          Float
  priority         Int
  deck_id          Int
  deck             Deck     @relation(fields: [deck_id], references: [deck_id])
}

model MasteryTracking {
  tracking_id Int      @id @default(autoincrement())
  timestamp   DateTime
  mastery     Float
  deck_id     Int
  deck        Deck     @relation(fields: [deck_id], references: [deck_id])
}

model Schedule {
  schedule_id Int      @id @default(autoincrement())
  event_type  String
  event_title String
  due_date    DateTime
  created_at  DateTime @default(now())
  deck_id     Int      @unique
  deck        Deck     @relation(fields: [deck_id], references: [deck_id])
}